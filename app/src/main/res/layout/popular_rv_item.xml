<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="22dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="340dp"
        android:layout_height="150dp"
        app:cardCornerRadius="20dp">
        <ImageView
            android:id="@+id/rv_popular_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pizza_sample"
            android:foreground="?android:attr/selectableItemBackground"
            android:scaleType="centerCrop"/>
        <ImageView
            android:id="@+id/img_gradient"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="bottom"
           android:src="@drawable/image_btm_overlay"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/popular_txt"
            android:text="This is sample text"
            android:layout_gravity="bottom"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/poppins"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="22dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/popular_time"
            android:layout_gravity="bottom"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins"
            android:layout_marginStart="15dp"
            android:textSize="11sp"
            android:text="⏱️20 min"
            android:maxLength="7"
            android:layout_marginBottom="7dp"
            />

    </androidx.cardview.widget.CardView>
</LinearLayout>